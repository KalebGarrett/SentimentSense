@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Transparent">
        <MudIconButton Class="visible-md" Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" OnClick="@((e) => DrawerToggle())"/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Primary" Href="https://github.com/KalebGarrett/SentimentSense" target="_blank" Size="Size.Medium"></MudIconButton>
    </MudAppBar>
    <MudDrawer style="background-color: #594AE2" @bind-Open="DrawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool DrawerOpen { get; set; } = true;

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }
}