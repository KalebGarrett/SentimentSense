@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" />
        <MudIconButton class="overflow-visible" Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/KalebGarrett/SentimentSense" target="_blank" Size="Size.Medium"></MudIconButton>
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool DrawerOpen { get; set; }= true;

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }
}